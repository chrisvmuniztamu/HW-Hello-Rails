<!-- app/views/movies/index.html.erb -->
<table>
  <thead>
    <tr>
      <th class="<%= 'sorted' if params[:sort_by] == 'title' %>">
        <%= link_to 'Title', movies_path(sort_by: 'title', sort_order: toggle_sort_order('title')) %>
      </th>
      <th class="<%= 'sorted' if params[:sort_by] == 'rating' %>">
        <%= link_to 'Rating', movies_path(sort_by: 'rating', sort_order: toggle_sort_order('rating')) %>
      </th>
      <th class="<%= 'sorted' if params[:sort_by] == 'release_date' %>">
        <%= link_to 'Release Date', movies_path(sort_by: 'release_date', sort_order: toggle_sort_order('release_date')) %>
      </th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
        <td>
          <%= link_to 'Show', movie_path(movie) %> |
          <%= link_to 'Edit', edit_movie_path(movie) %> |
          <%= link_to 'Delete', movie_path(movie), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Movie', new_movie_path %>
